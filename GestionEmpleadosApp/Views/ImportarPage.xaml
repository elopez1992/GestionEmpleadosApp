<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GestionEmpleadosApp.Views.ImportarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:GestionEmpleadosApp.ViewModels"
    Title="Importar">

    <ContentPage.BindingContext>
        <viewmodels:ImportarViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="10">
        <Label Text="Importa un archivo JSON con empleados." />
        <Label Text="{Binding ArchivoSeleccionado}" TextColor="Gray"/>
        <Button Text="Seleccionar archivo" Command="{Binding SeleccionarArchivoCommand}" />
        <Button Text="Importar" BackgroundColor="#3498DB" TextColor="White" Command="{Binding ImportarCommand}" />
    </VerticalStackLayout>
</ContentPage>
