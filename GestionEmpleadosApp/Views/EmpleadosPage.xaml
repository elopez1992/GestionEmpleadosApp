<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GestionEmpleadosApp.Views.EmpleadosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:GestionEmpleadosApp.ViewModels"
    Title="Empleados">

    <ContentPage.BindingContext>
        <viewmodels:EmpleadosViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="12" Spacing="10">

        <!-- Botones superiores -->
        <HorizontalStackLayout Spacing="8">
            <Button Text="Nuevo"
                    BackgroundColor="#27AE60"
                    TextColor="White"
                    CornerRadius="8"
                    Command="{Binding NuevoCommand}" />

            <Button Text="Importar"
                    BackgroundColor="#2980B9"
                    TextColor="White"
                    CornerRadius="8"
                    Command="{Binding IrImportarCommand}" />

            <Button Text="Actualizar"
                    BackgroundColor="#8E44AD"
                    TextColor="White"
                    CornerRadius="8"
                    Command="{Binding CargarCommand}" />

            <Button Text="Guardar Todo"
                    BackgroundColor="#16A085"
                    TextColor="White"
                    CornerRadius="8"
                    Command="{Binding GuardarTodoCommand}" />
        </HorizontalStackLayout>

        <!-- Lista de empleados -->
        <CollectionView ItemsSource="{Binding Empleados}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="6"
                           Padding="10"
                           CornerRadius="12"
                           HasShadow="True"
                           BorderColor="#3498DB"
                           BackgroundColor="#FDFEFE">

                        <Grid ColumnDefinitions="80,*,Auto"
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="10"
                              RowSpacing="4">

                            <!-- Foto -->
                            <Image Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Source="{Binding FotoBase64, Converter={StaticResource Base64ToImageConverter}}"
                                   WidthRequest="64"
                                   HeightRequest="64"
                                   Aspect="AspectFill"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Clip="RoundRectangleGeometry CornerRadius=12" />

                            <!-- Nombre -->
                            <Label Grid.Column="1"
                                   Text="{Binding Nombre}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#2C3E50" />

                            <!-- Puesto -->
                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding Puesto}"
                                   FontSize="14"
                                   TextColor="#7F8C8D" />

                            <!-- Botones de acciÃ³n -->
                            <HorizontalStackLayout Grid.Column="2"
                                                   Grid.RowSpan="2"
                                                   Spacing="6"
                                                   VerticalOptions="Center">

                                <Button Text="Editar"
                                        BackgroundColor="#2980B9"
                                        TextColor="White"
                                        CornerRadius="8"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarCommand}"
                                        CommandParameter="{Binding}" />

                                <Button Text="Eliminar"
                                        BackgroundColor="#E74C3C"
                                        TextColor="White"
                                        CornerRadius="8"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarCommand}"
                                        CommandParameter="{Binding}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>

